<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<artifactId>jaxb2-rich-contract-plugin</artifactId>
	<version>1.5.2-SNAPSHOT</version>

	<parent>
		<groupId>com.kscs.util</groupId>
		<artifactId>jaxb-plugin-parent</artifactId>
		<version>1.0.0</version>
	</parent>

	<name>JAXB 2.2 extended contract generation plugin</name>
	<packaging>jar</packaging>

	<scm>
		<connection>scm:git:https://github.com/mklemm/jaxb2-rich-contract-plugin.git</connection>
		<developerConnection>scm:git:https://github.com/mklemm/jaxb2-rich-contract-plugin.git</developerConnection>
		<url>https://github.com/mklemm/jaxb2-rich-contract-plugin.git</url>
		<tag>HEAD</tag>
	</scm>

	<build>
		<plugins>
			<plugin>
			      <groupId>org.codehaus.mojo</groupId>
			      <artifactId>exec-maven-plugin</artifactId>
			      <version>1.3.2</version>
			      <executions>
			        <execution>
			          <id>build-dump</id>
			          <phase>process-classes</phase>
			          <goals>
			            <goal>java</goal>
			          </goals>
			        </execution>
			      </executions>
			      <configuration>
			        <mainClass>com.kscs.util.plugins.xjc.UsagePrinter</mainClass>
					  <arguments>
						  <argument>../jaxb2-rich-contract-plugin-pages/plugin-usage.xhtml</argument>
					  </arguments>
			      </configuration>
			    </plugin>
		</plugins>
	</build>
</project>
